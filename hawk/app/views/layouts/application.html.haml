!!!

%html{ lang: I18n.locale.to_s.gsub("-", "_") }
  = render partial: "shared/header"

  %body{ **body_attrs }
    .navbar.navbar-fixed-top.navbar-inverse{ role: "navigation" }
      .container-fluid{ style: "white-space: nobreak;" }
        .navbar-header
          = link_to image_tag("head/white.png"), root_path, class: "navbar-brand"

        #navbar.navbar-right
          = render partial: "shared/usernav"

    .container-fluid
      .row.row-offcanvas.row-offcanvas-left
        #sidebar.col-xs-6.col-sm-2.col-md-4.col-lg-2.sidebar-offcanvas
          = render partial: "shared/mainnav"

        #middle.col-xs-12.col-sm-10.col-md-8.col-lg-10
          = render partial: "shared/flash", locals: { flash: flash }
          = yield

          - if current_cib.sim?
            .container-fluid
              .row
                .col-lg-12
                  = render partial: "shared/simulator"

    = render partial: "shared/footer"
    = render partial: "shared/modal"
