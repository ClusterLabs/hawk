!!!

%html{ lang: I18n.locale.to_s.gsub("-", "_") }
  = render partial: "shared/header"

  %body{ **body_attrs }
    .navbar.navbar-fixed-top{ role: "navigation", class: navbar_background_class }
      .container-fluid{ style: "white-space: nobreak;" }
        .navbar-header
          = link_to image_tag("logo/hawk.png", size: "30x30"), root_path, class: "navbar-brand"
          = link_to image_tag("head/white.png", size: "160x30", style: "padding-top: 7px"), root_path, class: "navbar-brand"

        #navbar.navbar-right
          = render partial: "shared/usernav"

    .nav-wrapper
      #sidebar.sidebar-wrapper
        = render partial: "shared/mainnav"

      .page-content-wrapper
        .page-content.container-fluid
          .row
            #middle.col-xs-12.col-sm-8.col-md-7.col-lg-6
              .container-fluid
                - if current_cib.sim?
                  .row
                    = render partial: "shared/simulator"

                = render partial: "shared/flash", locals: { flash: flash }
              = yield

            #rightbar.hidden-xs.col-sm-4.col-md-5.col-lg-6
              = yield :rightbar

    = render partial: "shared/footer"
    = render partial: "shared/modal"
