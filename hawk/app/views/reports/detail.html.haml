- unless @transition[:tags].empty?
  .row.margin-bottom
    .col-sm-12
      - @transition[:tags].each do |tag|
        - if tag == "error" || tag == "unclean"
          %span.label.label-danger= tag
        - else
          %span.label.label-default= tag
.row
  .col-sm-12
    %pre
      = history_text_markup @transition[:info]
- unless @transition[:info_err].blank?
  .row
    .col-sm-12
      %pre
        = history_text_markup @transition[:info_err]
