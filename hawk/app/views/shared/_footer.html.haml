%footer
  .container-fluid
    .row
      .col-md-6.copyright
        %p
          = branding_config[:provider].html_safe

      .col-md-6.hidden-xs.hidden-sm.metadata
        %dl.dl-inline
          %dt
            = _("Version:")
          %dd.status.version{ data: { link: "meta.version" } }
            = current_cib.meta.version
          %dt
            = _("DC:")
          %dd.status.dc{ data: { link: "meta.dc" } }
            = current_cib.meta.dc
          %dt
            = _("UI:")
          %dd.status.host{ data: { link: "meta.host" } }
            = current_cib.meta.host
          %dt
            = _("Status:")
          %dd.status.status{ data: { link: "meta.status" } }
            = current_cib.meta.status
