%ul.nav.navbar-nav
  - unless current_cib.offline?
    - if current_cib.live?
      %li
        = link_to navbar_item(_("Simulator"), "toggle-off"), cib_state_path(cib_id: current_user, init_cib: true), class: "simulator", title: _("Enable the simulation mode")
    - else
      %li
        = link_to navbar_item("Show/hide Simulator", "eye-slash"), "#menu", class: "menu-link"
      %li
        = link_to navbar_item(_("Disable Simulator"), "toggle-on"), cib_state_path(cib_id: "live"), class: "production", title: _("Disable the simulation mode")

  %li
    = link_to navbar_item(_("Profile"), "user"), edit_cib_profile_path(cib_id: current_cib.id), class: "profile"

  - unless installed_docs.empty?
    %li
      = link_to navbar_item(_("Help"), "question"), help_path, class: "help", data: { toggle: "modal", target: "#modal" }

  %li
    = link_to navbar_item(_("Logout"), "sign-out"), logout_path, class: "logout"

  %li.visible-xs-inline-block
    = link_to navbar_item(_("Menu"), "bars"), "#toggle-menu", class: "toggle"
