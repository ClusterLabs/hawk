.container-fluid
  .row
    %h1
      = icon_text "ticket", _("Edit Ticket"), class: "page"
      .pull-right
        .btn-group{ role: "group" }
          = link_to icon_text("trash", _("Delete")), cib_ticket_path(cib_id: @cib.id, id: @ticket.id), method: "delete", confirm: _("Are you sure you wish to delete %s?") % @ticket.id, class: "btn btn-default"

  .row
    = render partial: "form", locals: { cib: @cib, ticket: @ticket }

- content_for :rightbar do
  .container-fluid{ data: { spy: "affix" } }
    .row.ticket
      = localized_help_for :constraints, :ticket
